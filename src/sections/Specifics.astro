  const closeModalBtn = document.getElementById("close-modal");
  const closeModalFooterBtn = document.getElementById("close-modal-footer");
  const columns = document.querySelectorAll(".column");

  // Función para mostrar el modal
  function showModal(index) {
    const data = modalDetails[index];
    if (data) {
      modalTitle.textContent = data.title;

      // Limpiar contenido anterior
      modalDescription.innerHTML = "";

      // Crear párrafos para cada elemento de la descripción
      data.description.forEach((paragraph) => {
        const p = document.createElement("p");
        p.textContent = paragraph;
        p.className = "mb-4 last:mb-0"; // Espaciado entre párrafos
        modalDescription.appendChild(p);
      });

      modal.classList.remove("hidden");
      modal.classList.add("flex");
    }
  }

  // Función para ocultar el modal
  function hideModal() {
    modal.classList.add("hidden");
    modal.classList.remove("flex");
  }

  // Event listeners para abrir el modal
  columns.forEach((column, index) => {
    column.addEventListener("click", () => {
      showModal(index);
    });

    // Agregar cursor pointer para indicar que es clickeable
    column.style.cursor = "pointer";
  });

  // Event listeners para cerrar el modal
  closeModalBtn.addEventListener("click", hideModal);
  closeModalFooterBtn.addEventListener("click", hideModal);

  // Cerrar modal al hacer clic fuera del contenido
  modal.addEventListener("click", (e) => {
    if (e.target === modal) {
      hideModal();
    }
  });

  // Cerrar modal con la tecla Escape
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && !modal.classList.contains("hidden")) {
      hideModal();
    }
  });
</script>
