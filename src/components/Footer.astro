---
const {
  address,
  phone,
  email,
  addressOpen,
  range,
  range2,
  home,
  services,
  about,
  contact,
  faq,
  privacy,
  impressum,
  allRights,
  currentLang,
} = Astro.props;

// Función para generar href dinámico manteniendo el idioma
const getHref = (originalHref: string) => {
  if (originalHref.startsWith("#")) {
    return currentLang ? `/${currentLang}${originalHref}` : originalHref;
  }
  return originalHref;
};

// Función para páginas específicas con idioma
const getPageHref = (page: string) => {
  return currentLang ? `/${currentLang}${page}` : page;
};
---

<footer class="bg-white font-jost">
  <div class="mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-8">
    <div class="md:flex md:justify-between">
      <div class="mb-6 md:mb-0 gap-6 flex md:flex-col flex-row items-center">
        <a href="#home" class="flex items-center">
          <img src="/images/i1.webp" class="h-24" alt="Esther Trenner logo" />
        </a>
        <img
          src="/images/Siegel.webp"
          class="h-24"
          alt="ARGE Podologie Siegel"
        />
      </div>
      <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
        <div>
          <ul class="text-gray-800 font-medium te">
            <li>
              <div class="space-y-1">
                {address.map((line: string) => <div>{line}</div>)}
                <div class="mt-2">
                  <a
                    href={`tel:${phone.replace(/\s/g, "")}`}
                    class="hover:underline block">{phone}</a
                  >
                </div>
                <div>
                  <a href={`mailto:${email}`} class="hover:underline block"
                    >{email}</a
                  >
                </div>
                <div class="mt-2">
                  <div>{addressOpen}</div>
                  <div>{range}</div>
                  <div set:html={range2} />
                </div>
              </div>
            </li>
          </ul>
        </div>
        <div class="border-l border-5 pl-4">
          <ul class="text-gray-800 font-medium">
            <li class="mb-1">
              <a href="/" class="hover:underline">{home}</a>
            </li>
            <li class="mb-1">
              <a href="#tratements" class="hover:underline">{services}</a>
            </li>
            <li class="mb-1">
              <a href="#aboutme" class="hover:underline">{about}</a>
            </li>
            <li class="mb-1">
              <a href="#contact" class="hover:underline">{contact}</a>
            </li>
            <li class="mb-1">
              <a href="#faq" class="hover:underline">{faq}</a>
            </li>
          </ul>
        </div>
        <div class="md:border-l border-5 pl-4">
          <ul class="text-gray-800 font-medium flex gap-6 md:gap-0 md:flex-col">
            <li class="mb-1">
              <a href={getPageHref("/impressum")} class="hover:underline"
                >{impressum}</a
              >
            </li>
            <li class="mb-1">
              <a href={getPageHref("/datenschutz")} class="hover:underline"
                >{privacy}</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
    <hr class="my-6 border-gray-800 sm:mx-auto lg:my-8" />
    <div class="sm:flex sm:items-center sm:justify-between">
      <span class="text-sm text-gray-800 sm:text-center">{allRights} </span>
    </div>
  </div>
</footer>
